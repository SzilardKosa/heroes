<%- include('partials/header') -%>
<%- include('partials/navbar', {active: "Profile"}) -%>

<div class="container">
  <div class="row">
    <div class="col-12">
        <h2>My Profile</h2>
    </div>
  </div>
  <form method="POST" enctype="multipart/form-data">
    <div class="row">
      <div class="col-md-6">
        <!-- Add picture -->
        <div class="form-group">
          <img class="img-thumbnail" src="<%= user.profile %>">
          <input type="file" name="profile" class="form-control-file border">
        </div>
      </div>
      <div class="col-md-6">
        <!-- Change user info -->
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= user.name %>">
        </div>
        <div class="form-group">
          <label for="emailReg">Email</label>
          <input type="text" class="form-control" name="email" id="emailReg" value="<%= user.email %>">
        </div>
        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="text" class="form-control" name="phone" id="phone" value="<%= user.phone %>">
        </div>
        <div class="form-group">
          <label for="passwordReg">Password</label>
          <input type="password" class="form-control" name="password" id="passwordReg" value="<%= user.password %>">
        </div>
        <div class="form-group">
          <label class="mr-4">Universe</label>
          <% ['DC', 'Marvel'].forEach(currentUniverse => { %>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="<% currentUniverse %> "
                     id="<%= currentUniverse %>" value="<%= currentUniverse %>" disabled
                     <% if (user.universe === currentUniverse) { %>
                      checked
                     <% } %>>
              <label class="form-check-label" for="<%= currentUniverse %>"><%= currentUniverse %></label>
            </div>
          <% }) %>
        </div>
        <input type="submit" class="btn btn-primary mt-2" value="Save changes"/>
        <a href="/" class="btn btn-danger mt-2">Delete Profile</a>
      </div>
    </div>
  </form>
</div>

<%- include('partials/footer') -%>