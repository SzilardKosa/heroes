<%- include('partials/header') -%>
<%- include('partials/adminnavbar', {active: "Applications"}) -%>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Applications</h2>
      <table class="table table-striped table-bordered table-responsive">
        <thead>
        <tr>
          <th>ID</th>
          <th>Kid ID</th>
          <th>Kid name</th>
          <th>User ID</th>
          <th>User name</th>
          <th>Status</th>
          <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>

          <% applications.forEach(application => { %>
            <tr>
              <td><%= application._id %> </td>
              <td><%= application._kid.id %> </td>
              <td><%= application._kid.name %> </td>
              <td><%= application._user.id %> </td>
              <td><%= application._user.name %> </td>
              <td><%= application.status %> </td>
              <td style="width:30px;white-space: nowrap">
                <div class="d-flex flex-row">
                  <form method="POST" action="/applications/edit/<%= application._id %> ">
                    <input type="hidden" name="status" value="approved">
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-check-circle"></i></button>
                  </form>
                  <form class="mx-1" method="POST" action="/applications/edit/<%= application._id %> ">
                    <input type="hidden" name="status" value="denied">
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fas fa-times-circle"></i></button>
                  </form>
                  <a href="/applications/del/<%= application._id %> " class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                </div>
              </td>
            </tr>
          <% }) %>

        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>