<%- include('partials/header') -%>
<%- include('partials/adminnavbar', {active: "Applications"}) -%>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Applications</h2>
      <table class="table table-striped table-bordered table-responsive-md">
        <thead>
        <tr>
          <th>ID</th>
          <th>Kid ID</th>
          <th>Kid name</th>
          <th>User ID</th>
          <th>User name</th>
          <th>Status</th>
          <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>

          <% applications.forEach(application => { %>
            <tr>
              <td><%= application._id %> </td>
              <td><%= application.kidId %> </td>
              <td><%= application.kidName %> </td>
              <td><%= application.userId %> </td>
              <td><%= application.userName %> </td>
              <td><%= application.status %> </td>
              <td style="width:30px;white-space: nowrap">
                <a href="#" class="btn btn-sm btn-primary"><i class="fas fa-check-circle"></i></a>
                <a href="#" class="btn btn-sm btn-primary"><i class="fas fa-times-circle"></i></a>
                <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
          <% }) %>

        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>